<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:hint="Visit Summary"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/input_outline"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor Name: "
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Name"
            android:textStyle="bold"
            android:textSize="10dp"
            android:background="@drawable/input_outline"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specialty: "
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_doctor_specialty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:hint="Specialty"
            android:padding="10dp"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Office Location: "
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_doctor_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:hint="Location"
            android:padding="10dp"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visit Date: "
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_visit_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:hint="Visit Date"
            android:padding="10dp"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visit Summary: "
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_visit_synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:hint="Visit Summary"
            android:padding="10dp"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.v7.widget.CardView>