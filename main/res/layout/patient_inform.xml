<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/p_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/add_btn"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/p_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16dp"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_healthcare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health Care Provider"
            android:textSize="16dp"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textSize="16dp"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Address"
            android:textSize="16dp"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_phonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:padding="10dp"
            android:text="Primary Phone Number"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="16dp"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="16dp"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_pharmacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pharmacy Address"
            android:textSize="16dp"
            android:padding="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/p_blood_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Type"
            android:textSize="16dp"
            android:padding="10dp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/cardview_default_radius"
        android:layout_marginBottom="@dimen/cardview_default_elevation">

    </android.support.v7.widget.RecyclerView>

</android.support.v7.widget.CardView>
