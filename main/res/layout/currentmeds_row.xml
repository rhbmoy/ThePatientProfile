<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_medName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:hint="Medicine Name"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:background="@drawable/input_outline"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosage: "
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_medDose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Medicine Name"
            android:textStyle="bold"
            android:textSize="10dp"
            android:background="@drawable/input_outline"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frequency/Interval: "
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_medFreq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:hint="Medicine Name"
            android:padding="10dp"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason for Prescription: "
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_medReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:hint="Reason"
            android:padding="10dp"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preventative Care: "
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post_medPrevention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_outline"
            android:hint="Notes"
            android:padding="10dp"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.v7.widget.CardView>